<h2>Restaurants</h2>

<%= link_to "Top Restaurants", top_restaurants_path %>

<p><%= link_to "Add your restaurant", new_restaurant_path %></p>

<% @restaurants.each do |restaurant| %>
  <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
  <p>Stars: <%= restaurant.stars %></p>
  <%= link_to "Edit", edit_restaurant_path(restaurant) %> | <%= link_to "Remove", restaurant_path(restaurant), method: :delete %>
<% end %>
